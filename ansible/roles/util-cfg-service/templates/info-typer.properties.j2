info-typer.environment-name     = {{ environment_name }}

info-typer.type-attribute       = ipc-filetype
info-typer.filetype-read-amount = 1024

# iRODS configuration
info-typer.irods.host        = {{ irods.host }}
info-typer.irods.port        = {{ irods.port }}
info-typer.irods.user        = {{ irods.user }}
info-typer.irods.pass        = {{ irods.password }}
info-typer.irods.zone        = {{ irods.zone }}
info-typer.irods.home        = {{ irods.home }}
info-typer.irods.resc        = {{ irods.resc }}
info-typer.irods.max-retries = 10
info-typer.irods.retry-sleep = 1000
info-typer.irods.use-trash   = true

# AMQP settings

info-typer.amqp.host                 = {{ amqp_broker.irods.host }}
info-typer.amqp.port                 = {{ amqp_broker.irods.port }}
info-typer.amqp.user                 = {{ amqp_broker.irods.user }}
info-typer.amqp.pass                 = {{ amqp_broker.irods.password }}
info-typer.amqp.retry-sleep          = 10000
info-typer.amqp.exchange             = {{ amqp_broker.irods.exchange }}
info-typer.amqp.exchange.type        = {{ amqp_broker.irods.exchange_type }}
info-typer.amqp.exchange.durable     = {{ amqp_broker.irods.exchange_durable }}
info-typer.amqp.exchange.auto-delete = {{ amqp_broker.irods.exchange_auto_delete }}
info-typer.amqp.qos                  = 100
