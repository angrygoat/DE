[Unit]
Description={{data_container.service_description}}
BindsTo=docker.service
After=network.target docker.socket
Requires=docker.service 

[Service]
Type=oneshot
# Ignore errors with "-" since the container may already exist
ExecStartPre=/bin/docker rm -v {{data_container.container_name}}
ExecStart=/bin/docker run --name {{data_container.container_name}} {{data_container.unc_remote_registry}}/{{data_container.image_name}}:latest
